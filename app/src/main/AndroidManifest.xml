<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Android 13+: permiso notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_healing"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_healing"
        android:supportsRtl="true"
        android:theme="@style/Theme.Healing">

        <!-- Activity principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Healing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Receiver para alarmas de medicaciÃ³n -->
        <receiver
            android:name=".notifications.MedicationAlarmReceiver"
            android:exported="false" />

    </application>

</manifest>
